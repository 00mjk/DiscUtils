{
  "version": "0.12.0-alpha",

  "title": "LordMike.DiscUtils.Containers",
  "description": "DiscUtils, meta-package with container formats such as WIM, DMG, VHD, VHDX, XVA, VMDK",
  "authors": [ "Kenneth Bell", "LordMike" ],

  "packOptions": {
    "owners": [ "LordMike" ],
    "tags": [ "DiscUtils", "VHD", "VHDX", "XVA", "VMDK", "DMG" ],
    "projectUrl": "https://github.com/lordmike/discutils",
    "licenseUrl": "https://github.com/lordmike/discutils/blob/master/LICENSE.txt",
    "repository": {
      "type": "git",
      "url": "https://github.com/lordmike/discutils"
    }
  },

  "dependencies": {
    "LordMike.DiscUtils": "0.12.0-alpha",
    "LordMike.DiscUtils.Dmg": "0.12.0-alpha",
    "LordMike.DiscUtils.Iso9660": "0.12.0-alpha",
    "LordMike.DiscUtils.Vhd": "0.12.0-alpha",
    "LordMike.DiscUtils.Vhdx": "0.12.0-alpha",
    "LordMike.DiscUtils.Vmdk": "0.12.0-alpha",
    "LordMike.DiscUtils.Wim": "0.12.0-alpha",
    "LordMike.DiscUtils.Xva": "0.12.0-alpha"
  },

  "buildOptions": {
    "publicSign": true,
    "keyFile": "../../SigningKey.snk"
  },

  "frameworks": {
    "netstandard1.5": {
      "buildOptions": {
        "define": [ "NETCORE" ]
      }
    },
    "net20": {
      "dependencies": {
        "LordMike.DiscUtils.OpticalDiscSharing": "0.12.0-alpha"
      },
      "buildOptions": {
        "define": [ "NET20" ]
      }
    },
    "net40": {
      "dependencies": {
        "LordMike.DiscUtils.OpticalDiscSharing": "0.12.0-alpha"
      }
    },
    "net45": {
      "dependencies": {
        "LordMike.DiscUtils.OpticalDiscSharing": "0.12.0-alpha"
      }
    }
  }
}