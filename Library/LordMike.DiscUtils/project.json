{
  "version": "0.12.0-alpha",

  "title": "DiscUtils (for .NET and .NET Core), core library that supports parts of DiscUtils",
  "description": "Implementation of the ISO, UDF, FAT and NTFS file systems is now fairly stable. VHD, XVA, VMDK and VDI disk formats are implemented, as well as read/write Registry support. The library also includes a simple iSCSI initiator, for accessing disks via iSCSI and an NFS client implementation.",
  "authors": [ "Kenneth Bell", "Quamotion", "LordMike" ],

  "packOptions": {
    "owners": [ "LordMike" ],
    "tags": [ "DiscUtils", "VHD", "VDI", "XVA", "VMDK", "ISO", "NTFS", "EXT2FS" ],
    "projectUrl": "https://github.com/lordmike/discutils",
    "licenseUrl": "https://github.com/lordmike/discutils/blob/master/LICENSE.txt",
    "repository": {
      "type": "git",
      "url": "https://github.com/lordmike/discutils"
    }
  },

  "dependencies": {

  },

  "buildOptions": {
    "publicSign": true,
    "keyFile": "../../SigningKey.snk",
    "xmlDoc": true
  },

  "frameworks": {
    "netstandard1.5": {
      "dependencies": {
        "System.Collections": "4.0.11",
        "System.IO": "4.1.0",
        "System.IO.Compression": "4.1.0",
        "System.IO.FileSystem": "4.0.1",
        "System.Reflection.Extensions": "4.0.1",
        "System.Resources.ResourceManager": "4.0.1",
        "System.Runtime": "4.1.0",
        "System.Runtime.Extensions": "4.1.0",
        "System.Runtime.InteropServices": "4.1.0",
        "System.Security.AccessControl": "4.0.0",
        "System.Text.RegularExpressions": "4.1.0",
        "System.Xml.XmlDocument": "4.0.1",
        "System.Threading": "4.0.11" 
      },
      "buildOptions": {
        "define": [ "NETCORE" ]
      }
    },
    "net20": {
      "frameworkAssemblies": {
        "System.Xml": "2.0.0.0"
      },
      "buildOptions": {
        "define": [ "NET20" ]
      }
    },
    "net40": {
      "frameworkAssemblies": {
        "System.Xml": "4.0.0.0"
      }
    },
    "net45": {
      "frameworkAssemblies": {
        "System.Xml": "4.0.0.0"
      }
    }
  }
}