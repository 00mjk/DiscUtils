{
  "version": "1.0.3",

  "title": "DiscUtils.Containers",
  "description": "DiscUtils, meta-package with container formats such as WIM, DMG, VHD, VHDX, XVA, VMDK",
  "authors": [ "Kenneth Bell", "LordMike" ],

  "packOptions": {
    "owners": [ "LordMike" ],
    "tags": [ "DiscUtils", "VHD", "VHDX", "XVA", "VMDK", "DMG" ],
    "projectUrl": "https://github.com/lordmike/discutils",
    "licenseUrl": "https://github.com/lordmike/discutils/blob/master/LICENSE.txt",
    "repository": {
      "type": "git",
      "url": "https://github.com/lordmike/discutils"
    }
  },

  "dependencies": {
    "DiscUtils": "1.0.3",
    "DiscUtils.Dmg": "1.0.3",
    "DiscUtils.Iso9660": "1.0.3",
    "DiscUtils.Vhd": "1.0.3",
    "DiscUtils.Vhdx": "1.0.3",
    "DiscUtils.Vmdk": "1.0.3",
    "DiscUtils.Wim": "1.0.3",
    "DiscUtils.Xva": "1.0.3"
  },

  "buildOptions": {
    "publicSign": true,
    "keyFile": "../../discutils.snk"
  },

  "frameworks": {
    "netstandard1.5": {
      "buildOptions": {
        "define": [ "NETCORE" ]
      }
    },
    "net20": {
      "dependencies": {
        "DiscUtils.Net": "1.0.3",
        "DiscUtils.OpticalDiscSharing": "1.0.3"
      },
      "buildOptions": {
        "define": [ "NET20" ]
      }
    },
    "net40": {
      "dependencies": {
        "DiscUtils.Net": "1.0.3",
        "DiscUtils.OpticalDiscSharing": "1.0.3"
      }
    },
    "net45": {
      "dependencies": {
        "DiscUtils.Net": "1.0.3",
        "DiscUtils.OpticalDiscSharing": "1.0.3"
      }
    }
  }
}