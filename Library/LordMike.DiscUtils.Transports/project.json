{
  "version": "0.12.1-alpha",

  "title": "LordMike.DiscUtils.Transports",
  "description": "DiscUtils, meta-package with transports, such as iSCSI and NFS",
  "authors": [ "Kenneth Bell", "LordMike" ],

  "packOptions": {
    "owners": [ "LordMike" ],
    "tags": [ "DiscUtils", "iSCSI", "NFS" ],
    "projectUrl": "https://github.com/lordmike/discutils",
    "licenseUrl": "https://github.com/lordmike/discutils/blob/master/LICENSE.txt",
    "repository": {
      "type": "git",
      "url": "https://github.com/lordmike/discutils"
    }
  },

  "dependencies": {
    "LordMike.DiscUtils": "0.12.1-alpha",
    "LordMike.DiscUtils.Iscsi": "0.12.1-alpha",
    "LordMike.DiscUtils.Nfs": "0.12.1-alpha",
    "LordMike.DiscUtils.OpticalDisk": "0.12.1-alpha"
  },

  "buildOptions": {
    "publicSign": true,
    "keyFile": "../../SigningKey.snk"
  },

  "frameworks": {
    "netstandard1.5": {
      "buildOptions": {
        "define": [ "NETCORE" ]
      }
    },
    "net20": {
      "frameworkAssemblies": {
        "System.Xml": "2.0.0.0"
      },
      "buildOptions": {
        "define": [ "NET20" ]
      }
    },
    "net40": {
      "frameworkAssemblies": {
        "System.Xml": "4.0.0.0"
      }
    },
    "net45": {
      "frameworkAssemblies": {
        "System.Xml": "4.0.0.0"
      }
    }
  }
}